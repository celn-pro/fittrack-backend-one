{
  "name": "fittrack-backend-one",
  "version": "1.0.0",
  "description": "Health & Fitness App Backend with GraphQL, MongoDB, and External APIs",
  "main": "dist/server.js",
  "scripts": {
    "build": "echo 'Using ts-node for Railway deployment'",
    "start": "NODE_ENV=production ts-node --project tsconfig.railway.json src/server.ts",
    "build:dev": "tsc",
    "start:dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "start:prod": "NODE_ENV=production npm run build && npm start",
    "dev": "npm run start:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:gif-fallback": "jest src/tests/gif-fallback.test.ts",
    "demo:gif-fallback": "ts-node scripts/demo-gif-fallback.ts",
    "test:gif-urls": "ts-node scripts/test-gif-urls.ts",
    "debug:exercises": "ts-node scripts/debug-exercise-fetch.ts",
    "test:workout": "ts-node scripts/test-workout-recommendation.ts",
    "test:simple": "ts-node scripts/simple-workout-test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "postinstall": "npm run build",
    "railway:build": "npm run build",
    "railway:start": "npm start"
  },
  "keywords": [
    "fitness",
    "health",
    "graphql",
    "mongodb",
    "typescript",
    "recommendations"
  ],
  "author": "FitTrack Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/merge": "^9.0.24",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "apollo-server-express": "^3.12.1",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "typescript": "^4.9.5",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.4",
    "@types/node-cache": "^4.1.3",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
