# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fittrack
MONGODB_TEST_URI=mongodb://localhost:27017/fittrack_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# External API Keys
RAPIDAPI_KEY=your-rapidapi-key-for-exercisedb

# ExerciseDB API Configuration
EXERCISEDB_BASE_URL=https://exercisedb.p.rapidapi.com
EXERCISEDB_RATE_LIMIT_PER_MINUTE=100
EXERCISEDB_RATE_LIMIT_PER_DAY=10000

# Cache Configuration
CACHE_TTL_EXERCISES=86400000
CACHE_TTL_RECOMMENDATIONS=7200000
CACHE_TTL_USER_METRICS=1800000
CACHE_MAX_SIZE=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
